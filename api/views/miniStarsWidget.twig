{% include 'widgetHeader.html' %}

<!-- product average rating  -->
<div class="ekomi_average_rating">
    {% if starsAvg > 0 %}
        <div class="ekomi_mm_review_widget mini_stars_counter">
            <div class="ekomi_stars_wrap">
                <div class="ekomi_stars_gold" style="width:{{starsAvg * 20}}%"></div>
            </div>
            <meta content="{{articleName}}" itemprop="name">
            <div class="ekomi_total_reviews_wrap">
                <span class="total_reviews">(0)</span>
            </div>
        </div>
    {% endif %}
</div>